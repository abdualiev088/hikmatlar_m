<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/secondary"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/save"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:layout_width="40dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="right"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/saveImg"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/not_filled_bookmark"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/arabicText"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textSize="22dp"
            android:textColor="@color/mainColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="لا يهم كم أنت بطيئ طالما أنك لن تتوقف"/>

        <TextView
            android:id="@+id/quoteText"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="18dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/inter_semibold"
            android:text="It does not matter how slowly you go as long as you do not stop."
            android:textColor="@color/mainColor"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/authorBtn"
            android:layout_marginTop="18dp"
            android:background="@drawable/author_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                app:tint="@color/mainColor"
                android:layout_width="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_gravity="center"
                android:src="@drawable/person"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18dp"
                android:id="@+id/authorText"
                android:layout_marginVertical="13dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/mainColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Imam Xisham"/>
            <ImageView
                app:tint="@color/mainColor"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arrow_right"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>