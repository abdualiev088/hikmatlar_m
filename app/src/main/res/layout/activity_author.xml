<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AuthorActivity">
    <LinearLayout
        android:id="@+id/cards"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="14dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="0.4"
            android:backgroundTint="@color/secondary"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <ImageView
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/camel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparentImg"
                android:orientation="horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="14dp"
            android:backgroundTint="@color/secondary"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="120dp">
            <LinearLayout
                android:id="@+id/allQuotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:text="100"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="38sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/mainColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/mainColor"
                        android:text="Hikmatlar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/mainColor"
                        android:src="@drawable/arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/authorGroup"
        android:layout_marginTop="-30dp"
        app:layout_constraintStart_toStartOf="@+id/cards"
        app:layout_constraintTop_toBottomOf="@+id/cards"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="80dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="1000dp"

            android:layout_width="58dp"
            android:layout_height="58dp">

            <ImageView
                app:tint="@color/mainColor"
                android:layout_width="35dp"
                android:src="@drawable/person"
                android:layout_gravity="center"
                android:layout_height="35dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="14dp"
            android:textSize="20sp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/inter_semibold"
            android:text="Imam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/haqida"
        android:layout_width="wrap_content"
        android:text="Haqida"
        android:layout_marginTop="20dp"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/inter_semibold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/authorGroup"
        app:layout_constraintStart_toStartOf="@+id/cards"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/haqida"
        app:layout_constraintStart_toStartOf="@+id/haqida"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry.Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/cards"/>
</androidx.constraintlayout.widget.ConstraintLayout>